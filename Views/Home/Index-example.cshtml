@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sticky Navbar -->
    <nav class="navbar navbar-light bg-light sticky-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="\images\hino_logo.png" alt="Logo" width="55" height="40" class="d-inline-block align-text-top">
                <span class="ms-2">Document Management System</span>
            </a>

            <div class="d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="me-3">Hello, @User.Identity.Name</span>
                    <form asp-controller="Login" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-primary" asp-controller="Login" asp-action="LoginPage">Login</a>
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            @* @Html.Partial("Sidebar") *@

            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#" onclick="loadContent('@Url.Action("AddUserView", "Admin")')">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="loadContent('@Url.Action("Index", "Document")')">Public Document</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="loadContent('@Url.Action("LoadServicesContent", "Home")')">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" onclick="loadContent('@Url.Action("LoadContactContent", "Home")')">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>


            <!-- Main Content -->
            

            <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4" id="main-content">
                
            </div>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script> 
</body>
</html>
