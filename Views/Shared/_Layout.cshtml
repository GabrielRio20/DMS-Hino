<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DMS_Hino</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon" />
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Nunito:wght@300;400;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet" asp-append-version="true" />

    <!-- Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/document.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    
    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@

    <!-- Include Header -->
    @Html.Partial("_HeaderLayout")

    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                @Html.Partial("_SidebarLayout")
            </div>

            <!-- Main Content Area -->
            <div class="col-md-9">
                <main class="content" style="padding-top: 80px; padding-left: 15px; padding-right: 15px;">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div
    
    <!-- Vendor JS Files -->
    <script src="~/vendor/apexcharts/apexcharts.min.js" asp-append-version="true"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/vendor/chart.js/chart.umd.js" asp-append-version="true"></script>
    <script src="~/vendor/echarts/echarts.min.js" asp-append-version="true"></script>
    <script src="~/vendor/quill/quill.js" asp-append-version="true"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js" asp-append-version="true"></script>
    <script src="~/vendor/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/vendor/php-email-form/validate.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Main JS File -->
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
